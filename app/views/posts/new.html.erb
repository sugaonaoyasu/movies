<div class="form-new">
    <h1>新規投稿</h1>
    <%=form_for(@post, url: posts_path) do |f| %>
     <% if @post.errors.any? %>
            <%= @post.errors.count %>件のエラーが発生しました
            <% @post.errors.full_messages.each do |message| %>
                <%= message %>
            <% end %>
    <% end %>
        <h4>タイトル</h4>
        <%= f.text_field :title %>
        
        <h4>感想</h4>
        <%= f.text_area :body  %>
     
        <%= f.submit '投稿' %>
    <% end %>
</div>