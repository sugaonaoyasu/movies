<h1>投稿一覧</h1>
<div class="post-box">
    <table class="table table-striped">
        <tr>
            <th>タイトル</th>
            <th>感想</th>
        </tr>
        <% @posts.each do |post| %>
        <tr>
            <td><%= post.title%></td>
            <td><%= post.body%></td>
            <td><%= link_to 'Show', post %></td>
        </tr>
        <% end %>
    </table>
</div>

<h1>新規投稿</h1>
<%=form_for(@post) do |f| %>
    <h4>タイトル</h4>
    <%= f.text_field :title %>
    
    <h4>感想</h4>
    <%= f.text_area :body %>
 
    <%= f.submit '投稿' %>
<% end %>


