<div class="profile-container">
    <h3 class="profile-name"><%= @user.name %></h3>
    <table class="table table-striped">
        <tr>
            <th>タイトル</th>
            <th>感想</th>
        </tr>
        <% @posts.each do |post| %>
        <tr>
            <td><%= post.title%></td>
            <td><%= post.body%></td>
            <td><%= link_to 'Show', post %></td>
        </tr>
        <% end %>
    </table>
</div>
    
<% if @user.id == current_user.id %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
<% end %>
</div>